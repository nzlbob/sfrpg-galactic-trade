{
  "id": "sfrpg-galactic-trade",
  "title": "Starfinder Galactic Trade",
  "description": "This module adds a new system to Starfinder for managing trade between planets. It includes a new journal entry type for planets which can be used to buy trade goods and load them into the PC's assigned trading ships. Macros are included for Basic Galactric Trade",

  "authors": [
    {
      "name": "bob",
      "flags": {}
    }
  ],
  "version": "0.44",
  "compatibility": {
    "minimum": "10",
    "verified": "13",
    "maximum": "13"
  },
  "esmodules": [
    "galacticTrade.js"
  ],
  
  "packFolders": [
    {
      "name": "Galactic Trade",
      "packs": [
        "galactic-trade",
        "galactic-trade-macros",
        "galactic-trade-rolltables",
        "galactic-trade-actors"
      ],
      "color": "#19d6b7"
    }   

  ],
  "packs": [
    {
      "label": "Galactic Trade",
      "type": "JournalEntry",
      "name": "galactic-trade",
      "path": "packs/journal",
      "system": "sfrpg",
      "ownership": {
        "PLAYER": "OBSERVER",
        "ASSISTANT": "OWNER"
      },
      "flags": {},
      "banner": "modules/sfrpg-galactic-trade/images/solarsystems/pactWorlds.webp"
    },
   
    {
      "label": "Galactic Trade Macros",
      "type": "Macro",
      "name": "galactic-trade-macros",
      "path": "packs/macros",
      "system": "sfrpg",
      "ownership": {
        "PLAYER": "OBSERVER",
        "ASSISTANT": "OWNER"
      },
      "flags": {},
      "banner": "modules/sfrpg-galactic-trade/images/solarsystems/pactWorlds.webp"
    },
    {
      "label": "Galactic Trade Roll Tables",
      "type": "RollTable",
      "name": "galactic-trade-rolltables",
      "path": "packs/rolltables",
      "system": "sfrpg",
      "ownership": {
        "PLAYER": "OBSERVER",
        "ASSISTANT": "OWNER"
      },
      "flags": {},
      "banner": "modules/sfrpg-galactic-trade/images/solarsystems/pactWorlds.webp"
    },    {
      "label": "Galactic Trade Encounters",
      "type": "Actor",
      "name": "galactic-trade-actors",
      "path": "packs/trade-actors",
      "system": "sfrpg",
      "ownership": {
        "PLAYER": "OBSERVER",
        "ASSISTANT": "OWNER"
      },
      "flags": {},
      "banner": "modules/sfrpg-galactic-trade/images/solarsystems/pactWorlds.webp"
    }
  ],
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json",
      "flags": {}
    }
  ],
  "styles": [
    "styles/galactic-trade.css"
  ],
  "documentTypes": {
    "JournalEntryPage": {
      "planet": {
        "filePathField": {
          "src": [
            "images"
          ]
        }
      }
    }
  },
  "relationships": {
    "systems": [
      {
        "id": "sfrpg",
        "type": "system",
        "compatibility": {
          "verified": "0.0.0"
        }
      }
    ],
    "requires": [
      {
        "id": "foundryvtt-simple-calendar",
        "type": "module",
        "manifest": "https://github.com/JaseHadd/foundryvtt-simple-calendar/releases/latest/download/module.json",
        "compatibility": {}
      }
    ]
  },
  "url": "https://github.com/nzlbob/sfrpg-galactic-trade",
  "manifest": "https://raw.githubusercontent.com/nzlbob/sfrpg-galactic-trade/refs/heads/main/module.json",
  "download": "https://github.com/nzlbob/sfrpg-galactic-trade/archive/refs/heads/main.zip",
  "media": [
    {
      "type": "thumbnail",
      "url": "modules/sfrpg-galactic-trade/images/galactic-trade.webp",
      "loop": false,
      "flags": {}
    },
    {
      "type": "setup",
      "url": "modules/sfrpg-galactic-trade/images/galactic-trade.webp",
      "loop": false,
      "flags": {}
    },
    {
      "type": "cover",
      "url": "https://raw.githubusercontent.com/nzlbob/sfrpg-galactic-trade/main/images/galactic-trade.webp",
      "caption": "Starfinder Galactic Trade",
      "loop": false,
      "flags": {}
    }
  ]
}